<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.umitems.kotlin.kotlin2.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="368dp"
        android:layout_height="414dp"
        android:id="@+id/recyclerView"
        tools:layout_editor_absoluteX="8dp"
        app:layout_constraintBottom_toTopOf="@+id/seekBar"
        android:layout_marginBottom="8dp"/>

    <Button
        android:text="Random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnRandom"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnSort"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"/>

    <Button
        android:text="Sorting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnSort"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnRandom"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btnSort"
        app:layout_constraintTop_toTopOf="@+id/btnSort"
        app:layout_constraintBottom_toBottomOf="@+id/btnSort"/>

    <SeekBar
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toLeftOf="@+id/tvFast"
        android:layout_marginEnd="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvSlow"
        app:layout_constraintTop_toTopOf="@+id/tvFast"
        app:layout_constraintBottom_toTopOf="@+id/btnSort"
        android:layout_marginBottom="8dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintVertical_bias="0.42000002"/>

    <TextView
        android:text="Slow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSlow"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seekBar"/>

    <TextView
        android:text="Fast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFast"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button"
        android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>
